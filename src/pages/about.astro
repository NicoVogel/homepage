---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'About',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Vogel Tec AB"
    image={{
      src: 'https://images.unsplash.com/photo-1487017159836-4e23ece2e4cf?q=80&w=2342&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title"> Continuously grow and improve </Fragment>

    <Fragment slot="subtitle">
      After years of industry experience, I founded Vogel Tec AB to push the boundaries of my expertise and deliver
      impactful software solutions across various sectors.
    </Fragment>
  </Hero>

  <Features3
    title="Core Working principles"
    subtitle="Delivering quick value and flexible solutions"
    columns={2}
    items={[
      {
        title: 'Delivering Quick Value',
        description: 'Focus on delivering value incrementally by adapting software to real-world requirements.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Organic Growth',
        description: 'Embrace flexibility to allow software to grow effectively without unnecessary complexity.',
        icon: 'tabler:growth',
      },
    ]}
  />

  <Stats
    title="Statistics Vogel Tec AB"
    stats={[
      { title: 'Clients', amount: '2' },
      { title: 'Projects', amount: '2' },
      { title: 'Employees', amount: '1' },
    ]}
  />

  <Steps2
    title="Where is Vogel Tec AB headed?"
    subtitle="Growing with shared values and a focus on client success"
    items={[
      {
        title: 'Attract Talented Developers',
        description: 'Bring on individuals who share our values to advance the company.',
      },
      {
        title: 'Training for Excellence',
        description: 'Develop promising talent to be the best in the field, ensuring competitiveness.',
      },
      {
        title: 'Combining Quality and Flexibility',
        description:
          'Achieve high-quality development with a flexible and efficient approach, centered on client success.',
      },
    ]}
  />

  <Steps2
    isReversed
    title="Portfolio Highlights"
    subtitle="Notable projects showcasing our expertise and impact across various industries"
    callToAction={{
      text: 'Portfolio',
      href: `${getPermalink('/portfolio')}`,
    }}
    items={[
      {
        title: 'Patient Monitoring UI for Philips',
        description: 'Developed a scalable, future-proof frontend architecture to enhance healthcare monitoring.',
        icon: 'tabler:heartbeat',
      },
      {
        title: 'WCAG-Compliant Chatbot for Viind GmbH',
        description: 'Created an accessible chatbot solution meeting WCAG standards for public sector services.',
        icon: 'tabler:building',
      },
      {
        title: 'Micro Frontend Composition for Manufacturing',
        description: 'Implemented a reliable frontend architecture for seamless integration of complex systems.',
        icon: 'tabler:tools',
      },
      {
        title: 'Document Generation Software for Automotive Sector',
        description: 'Developed a full-stack solution to streamline document generation and deployment.',
        icon: 'tabler:car',
      },
    ]}
  />
  <Features2
    title="A Little About Me"
    tagline="Get to know the founder"
    columns={2}
    items={[
      {
        title: 'Industry Expertise',
        description:
          'In the industry since 2015, specializing in TypeScript, development environments, and automation.',
        icon: 'tabler:code',
      },
      {
        title: 'Embracing Challenges',
        description: 'Enjoys tackling unique project challenges and finding commonalities across codebases.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Outdoor Enthusiast',
        description: 'Outside of work, I am into bouldering, downhill mountain biking, and hiking.',
        icon: 'tabler:mountain',
      },
      {
        title: 'Gamer at Heart',
        description: 'I unwind by playing video games now and then.',
        icon: 'tabler:device-gamepad',
      },
    ]}
  />
</Layout>
