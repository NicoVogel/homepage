---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};

---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Contact Vogel Tec AB" />

  <ContactUs
    id="form"
    title="Let's Discuss Your Project Needs"
    subtitle="I'd love to hear about your project ideas or discuss how Vogel Tec AB can help bring your software goals to life. Whether you're interested in a custom solution, consulting, or simply have questions, feel free to reach out!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name (required)',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company Name (optional)',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email (required)',
      },
    ]}
    textarea={{
      label: 'Message (required)',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="I aim to respond within 1-3 business days."
  />

  <!-- Contact Information Section ************** -->

  <Features2
    title="Contact Information"
    items={[
      {
        title: 'Email',
        description: 'hello@vogel-tec.dev',
        icon: 'tabler:mail',
        callToAction: {
          text: 'Send Email',
          onclick: 'window.location.href="mailto:hello@vogel-tec.dev"',
        },
      },
      {
        title: 'LinkedIn',
        description: 'Nico Vogel',
        icon: 'tabler:brand-linkedin',
        callToAction: {
          text: 'Open LinkedIn',
          // should open in  a new tab
          onclick: 'window.open("https://www.linkedin.com/in/nico-vogel-49a196196/", "_blank")',
        },
      },
      {
        title: 'Location',
        description: 'Örnens Väg 3, LGH 1301<br/> 136 36 Handen,<br/> Sweden',
        icon: 'tabler:map-pin',
        callToAction: {
          text: 'View on Google Maps',
          onclick:
            'window.open("https://www.google.com/maps/search/?api=1&query=%C3%96rnens+V%C3%A4g+3,+LGH+1301,+136+36+Handen,+Sweden", "_blank")',
        },
      },
    ]}
  />
</Layout>
